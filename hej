  <style>
    body {
      font-family: 'Arial', sans-serif;
      background-color: #ffe6e6;
      color: #333;
      text-align: center;
      padding: 50px;
    }
    #message {
      font-size: 24px;
    }
    #buttons {
      display: none;
      margin-top: 20px;
    }
    .choice-button {
      background-color: #ff6b81;
      color: white;
      border: none;
      border-radius: 8px;
      padding: 15px 30px;
      font-size: 18px;
      cursor: pointer;
      margin: 10px;
      transition: all 0.3s;
    }
