<body>
  <div id="message">Hej Nieve, vad kul att du har hittat hit!</div>
  <div id="buttons">
    <button class="choice-button" id="yes-button">Ja</button>
    <button class="choice-button" id="no-button">Euuwwww nej??</button>
  </div>

  <script>
    const messageElement = document.getElementById("message");
    const buttonsElement = document.getElementById("buttons");

    function showMessage(text, delay, callback) {
      setTimeout(() => {
        messageElement.textContent = text;
        if (callback) callback();
      }, delay);
    }

    showMessage("Hej Nieve, vad kul att du har hittat hit!", 0, () => {
      showMessage("Det här är en hemlig beundrare... jag har en viktig fråga som jag vill ställa dig...", 5000, () => {
        showMessage("Will you be my valentine?", 5000, () => {
          buttonsElement.style.display = "block";
        });
      });
    });

    document.getElementById("yes-button").addEventListener("click", () => {
      messageElement.textContent = "JAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAAA!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!!";
      buttonsElement.style.display = "none";
      setTimeout(() => {
        messageElement.innerHTML = "<span id='host-text'>(host)</span>";
        setTimeout(() => {
          messageElement.textContent = "Jag menar, jag älskar dig :3";
        }, 5000);
      }, 5000);
    });

    document.getElementById("no-button").addEventListener("click", () => {
      messageElement.textContent = "T_T fel val, snälla (snällasnällasnällasnällasnälla) försök igen....... o_O";
      buttonsElement.style.display = "none";
      setTimeout(() => {
        messageElement.textContent = "Will you be my valentine?";
        buttonsElement.style.display = "block";
      }, 5000);
    });
  </script>
</body>
</html>
